<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventSpaceBookingSystem.View.HomePage"
             BackgroundColor="#F5F5F5">
    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <!-- HEADER: Greeting + Notification + Settings -->
            <Grid Padding="15,10" ColumnDefinitions="*, Auto" BackgroundColor="White">
                <Label Grid.Column="0" Text="{Binding Username, StringFormat='Hello {0}!'}" FontSize="30" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Start"/>
                <HorizontalStackLayout Grid.Column="1" Spacing="15" VerticalOptions="Center" HorizontalOptions="End" Padding="0,0,0,0">
                    <ImageButton Padding="10" Source="notification_icon.png" WidthRequest="16" HeightRequest="16" Aspect="AspectFit" BackgroundColor="Transparent" Clicked="OnNotificationClicked"/>
                    <ImageButton Padding="10" Source="settings_icon.png" WidthRequest="16" HeightRequest="16" Aspect="AspectFit" BackgroundColor="Transparent" Clicked="OnSettingsClicked"/>
                </HorizontalStackLayout>
            </Grid>




            <!-- NAVIGATION BAR -->
            <Grid Padding="0" ColumnDefinitions="*,*,*,*" BackgroundColor="White">

                <!-- HOME -->
                <Grid Grid.Column="0">
                    <StackLayout Padding="0,10" BackgroundColor="#D3D3D3">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnHomeClicked" />
                        </StackLayout.GestureRecognizers>
                        <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Image Source="home_icon.png" WidthRequest="22" HeightRequest="22"/>
                            <Label Text="HOME" FontSize="14" FontAttributes="Bold" VerticalOptions="Center" TextColor="Black"/>
                        </HorizontalStackLayout>
                    </StackLayout>
                </Grid>

                <!-- VENUES -->
                <Grid Grid.Column="1">
                    <StackLayout Padding="0,10" BackgroundColor="Transparent">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnExploreClicked" />
                        </StackLayout.GestureRecognizers>
                        <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Image Source="explore_icon.png" WidthRequest="22" HeightRequest="22"/>
                            <Label Text="Venues" FontSize="14" VerticalOptions="Center" TextColor="Black"/>
                        </HorizontalStackLayout>
                    </StackLayout>
                </Grid>

                <!-- CART -->
                <Grid Grid.Column="2">
                    <StackLayout Padding="0,10" BackgroundColor="Transparent">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnCartClicked" />
                        </StackLayout.GestureRecognizers>
                        <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Image Source="cart_icon.png" WidthRequest="22" HeightRequest="22"/>
                            <Label Text="Cart" FontSize="14" VerticalOptions="Center" TextColor="Black"/>
                        </HorizontalStackLayout>
                    </StackLayout>
                </Grid>

                <!-- OWNER -->
                <Grid Grid.Column="3"
      IsVisible="{Binding UserStatus, Converter={StaticResource StatusToVisibilityConverter}}">
                    <StackLayout Padding="0,10" BackgroundColor="Transparent">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnBecomeOwnerClicked" />
                        </StackLayout.GestureRecognizers>
                        <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Image Source="owner_icon.png" WidthRequest="22" HeightRequest="22"/>
                            <Label Text="Be an Event Space Owner!" FontSize="14" VerticalOptions="Center" TextColor="Black" LineBreakMode="TailTruncation"/>
                        </HorizontalStackLayout>
                    </StackLayout>
                </Grid>



            </Grid>


            <!-- StackLayout containing Background Image with Title and Tagline -->
            <StackLayout BackgroundColor="White">

                <!-- Background Image -->
                <Grid>
                    <Image Source="header_background.png" Aspect="AspectFill" HeightRequest="200" />
                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20,20,20,30" Spacing="5">
                        <Label Text="Ramenco Event Space Booking" FontSize="50" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="Book Your Space, Make Memories" FontSize="20" HorizontalOptions="Center" TextColor="Black"/>
                    </StackLayout>
                </Grid>

                <!-- Search Section -->
                <Grid ColumnDefinitions="3*, 2*, Auto" Margin="0,20,0,0" Padding="20">

                    <!-- Search Input -->
                    <!--<Grid Grid.Column="0" ColumnDefinitions="Auto, *" Padding="0">
                        <Image Grid.Column="0" Source="search_icon.png" HeightRequest="20" WidthRequest="20" Margin="5,0,5,0" VerticalOptions="Center"/>
                        <Entry Grid.Column="1" Placeholder="Find event space you're interested in" Text="{Binding SearchQuery}" MinimumWidthRequest="200" VerticalOptions="Center" BackgroundColor="White" HeightRequest="40"/>
                    </Grid>-->

                    <!-- Location Input -->
                    <!--<Grid Grid.Column="1" ColumnDefinitions="Auto, *" Padding="0" Margin="10,0,0,0">
                        <Image Grid.Column="0" Source="location_icon.png" HeightRequest="25" WidthRequest="25" Margin="5,0,5,0" VerticalOptions="Center"/>
                        <Entry Grid.Column="1" Text="{Binding LocationQuery}" Placeholder="Enter Location" VerticalOptions="Center" BackgroundColor="White" HeightRequest="40"/>
                    </Grid>-->

                    
                </Grid>

            </StackLayout>
            

            <!-- Popular Booked Events Section -->
            <Grid Grid.Row="1" Padding="20,30,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title Label Section -->
                <StackLayout Grid.Row="0" Margin="0,0,0,20">
                    <Label Text="Popular Booked Events" FontSize="20" FontAttributes="Bold" Margin="0,0,0,20"/>
                </StackLayout>

                <!-- Events CollectionView and Navigation Arrows -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Arrow -->
                    <ImageButton Grid.Column="0" Source="left_arrow.png" WidthRequest="40" HeightRequest="40" CornerRadius="20" Padding="0" BackgroundColor="White" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,0,15,0" Clicked="OnPreviousCommand"/>

                    <!-- Events CollectionView -->
                    <CollectionView Grid.Column="1" x:Name="eventsCollection" ItemsSource="{Binding PopularEvents}" HeightRequest="320">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal" ItemSpacing="15"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Margin="10" Padding="0" WidthRequest="250" HeightRequest="400" CornerRadius="10" HasShadow="True" BackgroundColor="White">
                                    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto">
                                        <Image Grid.Row="0" Source="{Binding UploadedImage}" Aspect="AspectFill" HeightRequest="180"/>
                                        <Button Grid.Row="0" Text="Explore" Command="{Binding Source={x:Reference eventsCollection}, Path=BindingContext.ExploreCommand}" CommandParameter="{Binding}" BackgroundColor="#4F46E5" TextColor="White" WidthRequest="80" HeightRequest="30" CornerRadius="5" HorizontalOptions="End" VerticalOptions="End" Margin="0,0,10,10"/>
                                        <StackLayout Grid.Row="1" Padding="10,5">
                                            <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="16" Margin="0,5"/>
                                        </StackLayout>
                                        <StackLayout Grid.Row="2" Padding="10,0,10,5">
                                            <Label Text="{Binding Category}" FontSize="12" TextColor="#4F46E5" LineBreakMode="WordWrap" MaxLines="2"/>
                                        </StackLayout>
                                        <StackLayout Grid.Row="3" Orientation="Horizontal" Padding="10,0,10,5">
                                            <Label Text="★" FontSize="14" TextColor="Gold"/>
                                            <Label Text="{Binding Rating}" FontSize="14" Margin="0,0,10,0"/>
                                            <Label Text="{Binding ReviewCount, StringFormat='({0} Reviews)'}" FontSize="14" TextColor="#666666"/>
                                        </StackLayout>
                                        <Grid Grid.Row="4" Padding="10,5,10,10" ColumnDefinitions="*, Auto">
                                            <Label Grid.Column="0" Text="{Binding Capacity, StringFormat='Upto {0} Guests'}" VerticalOptions="Center" FontSize="14"/>
                                            <Label Grid.Column="1" Text="{Binding FormattedPrice}" FontAttributes="Bold" FontSize="16" VerticalOptions="Center"/>
                                        </Grid>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>


                    <!-- Right Arrow -->
                    <ImageButton Grid.Column="2" Source="right_arrow.png" WidthRequest="40" HeightRequest="40" CornerRadius="20" Padding="0" BackgroundColor="White" VerticalOptions="Center" HorizontalOptions="Center" Margin="15,0,0,0" Clicked="OnNextCommand"/>
                </Grid>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
