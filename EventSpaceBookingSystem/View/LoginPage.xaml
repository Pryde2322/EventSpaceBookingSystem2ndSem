<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventSpaceBookingSystem.View.LoginPage"
             BackgroundColor="#F5F5F5"
             Title="Login">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="CenterAndExpand">

            <!-- Title -->
            <Label Text="Welcome"
                   FontSize="36"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black"/>

            <!-- Email -->
            <VerticalStackLayout>
                <Label Text="Email" FontSize="16" TextColor="Black"/>
                <Entry x:Name="txtEmail"
                       Placeholder="Enter your email"
                       Keyboard="Email"
                       BackgroundColor="White"
                       TextColor="Black"
                       HeightRequest="45"
                       Margin="0,5,0,0"/>
            </VerticalStackLayout>

            <!-- Password -->
            <VerticalStackLayout>
                <Label Text="Password" FontSize="16" TextColor="Black" />
                <Grid>
                    <!-- Password Entry -->
                    <Entry Text="{Binding Password}"
               IsPassword="{Binding IsPasswordVisible, Converter={StaticResource InverseBoolConverter}}"
               Placeholder="Enter your password"
               BackgroundColor="White"
               TextColor="Black"
               HeightRequest="45"
               Margin="0,5,40,0" />

                    <!-- Eye Icon Button -->
                    <ImageButton Source="{Binding IsPasswordVisible, Converter={StaticResource PasswordEyeIconConverter}}"
                     HeightRequest="25"
                     WidthRequest="25"
                     HorizontalOptions="End"
                     VerticalOptions="Center"
                     BackgroundColor="Transparent"
                     Margin="0,0,5,0"
                     Clicked="OnShowPasswordClicked" />
                </Grid>
            </VerticalStackLayout>

            <!-- Terms of Service -->
            <HorizontalStackLayout VerticalOptions="Center">
                <CheckBox x:Name="chkTerms" IsChecked="{Binding IsTermsAccepted}" />
                <Label Text="Terms of Service"
                       FontSize="14"
                       VerticalOptions="Center"
                       TextColor="Black"/>
            </HorizontalStackLayout>

            <!-- Login Button -->
            <Button Text="Login"
                    BackgroundColor="#D9D9D9"
                    TextColor="Black"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnLoginClicked"/>

            <!-- Divider -->
            <Label Text="or login with"
                   FontAttributes="Bold"
                   FontSize="14"
                   HorizontalOptions="Center"
                   TextColor="Black"/>

            <!-- Social Buttons -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="30">
                <ImageButton Source="google_icon.png"
                             HeightRequest="50"
                             WidthRequest="50"
                             BackgroundColor="Transparent"
                             Clicked="OnGoogleSignUpClicked"/>
                <ImageButton Source="facebook_icon.png"
                             HeightRequest="50"
                             WidthRequest="50"
                             BackgroundColor="Transparent"
                             Clicked="OnFacebookSignUpClicked"/>
            </HorizontalStackLayout>

            <!-- Sign Up link -->
            <HorizontalStackLayout HorizontalOptions="Center">
                <Label Text="Don't have an account? "
                       FontSize="14"
                       TextColor="Black"/>
                <Label Text="Sign up"
                       FontSize="14"
                       TextColor="#007AFF"
                       FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSignUpTapped"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>


