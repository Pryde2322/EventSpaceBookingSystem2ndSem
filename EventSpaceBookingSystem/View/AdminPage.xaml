<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EventSpaceBookingSystem.Model"
             x:Class="EventSpaceBookingSystem.View.AdminPage"
             Title=" "
             BackgroundColor="LightGrey"
             xmlns:converters="clr-namespace:EventSpaceBookingSystem.Converters">

    <ScrollView>
        <VerticalStackLayout Padding="18" Spacing="14">

            <!-- Header -->
            <Grid Margin="0,20,0,30">
                <Label Text="Admin" FontSize="30" FontAttributes="Bold" HorizontalOptions="Start" />
                <HorizontalStackLayout Spacing="15"
                       HorizontalOptions="End"
                       VerticalOptions="Center">

                    <ImageButton Source="user24px.png"
                     Clicked="OnProfileIconClicked"
                     BackgroundColor="Transparent"/>
                </HorizontalStackLayout>
            </Grid>

            <!-- Search Box -->
            <Frame Padding="8" HasShadow="False" BackgroundColor="White" CornerRadius="12" Margin="0,0,0,10">
                <SearchBar
                    Placeholder="Search Space Owners"
                    FontSize="15"
                    BackgroundColor="Transparent"
                    TextColor="Black"
                    PlaceholderColor="#9E9E9E"
                    SearchCommand="{Binding SearchCommand}"
                    Text="{Binding SearchText, Mode=TwoWay}"
                    HorizontalOptions="FillAndExpand" />
            </Frame>

            <!-- Filter Buttons -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="FillAndExpand" Margin="0,0,0,10">
                <Button Text="All Owners" FontAttributes="Bold" Clicked="OnAllOwnersClicked"/>
                <Button Text="Active" FontAttributes="Bold" Clicked="OnActiveOwnersClicked"/>
                <Button Text="Deactivated" FontAttributes="Bold" Clicked="OnDeactivatedOwnersClicked"/>
            </HorizontalStackLayout>

            <!-- Owner List -->
            <Frame HasShadow="False"
                   BackgroundColor="White"
                   CornerRadius="12"
                   Padding="10">

                <VerticalStackLayout Spacing="8">
                    <ScrollView Orientation="Horizontal">
                        <CollectionView ItemsSource="{Binding SpaceOwners}"
                                        x:Name="OwnersListView"
                                        SelectionMode="None"
                                        HorizontalScrollBarVisibility="Never">

                            <!-- Table Header -->
                            <CollectionView.Header>
                                <Grid ColumnDefinitions="*,*,*,*,*" Padding="10" BackgroundColor="#F5F5F5" WidthRequest="1200">
                                    <Label Text="Owner" FontAttributes="Bold" Grid.Column="0" />
                                    <Label Text="Spaces" FontAttributes="Bold" Grid.Column="1" />
                                    <Label Text="Status" FontAttributes="Bold" Grid.Column="2" />
                                    <Label Text="Last Active" FontAttributes="Bold" Grid.Column="3" />
                                    <Label Text="Toggle" FontAttributes="Bold" Grid.Column="4" />
                                </Grid>
                            </CollectionView.Header>

                            <CollectionView.EmptyView>
                                <Label Text="No owners found." Padding="8" TextColor="#9E9E9E" />
                            </CollectionView.EmptyView>

                            <!-- Table Rows -->
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="*,*,*,*,*" Padding="10" BackgroundColor="White" WidthRequest="1200">
                                        <Label Text="{Binding Name}" FontSize="14" Grid.Column="0" VerticalOptions="Center" />
                                        <Label Text="{Binding Spaces, StringFormat='{}{0} spaces'}" FontSize="14" Grid.Column="1" VerticalOptions="Center" />
                                        <Label Text="{Binding IsActive, Converter={StaticResource StatusConverter}}"
                                               FontSize="14"
                                               TextColor="{Binding IsActive, Converter={StaticResource StatusColorConverter}}" 
                                               Grid.Column="2" VerticalOptions="Center" />
                                        <Label Text="{Binding LastActive}" FontSize="14" Grid.Column="3" VerticalOptions="Center" />
                                        <Switch IsToggled="{Binding IsActive, Mode=TwoWay}" Grid.Column="4" VerticalOptions="Center" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                            
                        </CollectionView>
                    </ScrollView>
                </VerticalStackLayout>
            </Frame>

            <!-- Transaction Reports -->
            <Frame BorderColor="#E0E0E0"
                   CornerRadius="10"
                   Padding="14"
                   BackgroundColor="White"
                   HasShadow="False">

                <VerticalStackLayout Spacing="12">
                    <Label Text="Transaction Reports"
                           Margin="0,0,0,10"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#000000" />

                    <!-- Filters (Scrollable on small screens) -->
                    <ScrollView Orientation="Horizontal" Margin="0,10,0,20">
                        <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="12" RowSpacing="12" WidthRequest="1100">

                            <!-- Date Range -->
                            <VerticalStackLayout Spacing="4">
                                <Label Text="Date Range" FontAttributes="Bold" FontSize="13" TextColor="#000000" />
                                <Label Text="Filter transactions by date" FontSize="12" TextColor="#757575" />
                                <Button Text="Select Dates" BackgroundColor="#000000" TextColor="White" CornerRadius="8"
                                        HeightRequest="40" Command="{Binding SelectDateRangeCommand}" />
                            </VerticalStackLayout>

                            <!-- Location -->
                            <VerticalStackLayout Spacing="4" Grid.Column="1">
                                <Label Text="Location" FontAttributes="Bold" FontSize="13" TextColor="#000000" />
                                <Label Text="Filter transactions by venue location" FontSize="12" TextColor="#757575" />
                                <Button Text="Select Space" BackgroundColor="#000000" TextColor="White" CornerRadius="8"
                                        HeightRequest="40" Command="{Binding SelectLocationCommand}" />
                            </VerticalStackLayout>

                            <!-- Owner -->
                            <VerticalStackLayout Spacing="4" Grid.Column="2">
                                <Label Text="Owner" FontAttributes="Bold" FontSize="13" TextColor="#000000" />
                                <Label Text="Filter transactions by space owner" FontSize="12" TextColor="#757575" />
                                <Button Text="Select Owner" BackgroundColor="#000000" TextColor="White" CornerRadius="8"
                                        HeightRequest="40" Command="{Binding SelectOwnerCommand}" />
                            </VerticalStackLayout>

                            <!-- Clear Filters -->
                            <VerticalStackLayout Spacing="4" Grid.Column="3">
                                <Label Text="" FontSize="13" />
                                <Label Text="" FontSize="12" />
                                <Button Text="Clear Filters" BackgroundColor="#9E9E9E" TextColor="White" CornerRadius="8"
                                        HeightRequest="40" Command="{Binding ClearFiltersCommand}" />
                            </VerticalStackLayout>
                        </Grid>
                    </ScrollView>

                    <!-- Transactions Table -->
                    <ScrollView Orientation="Horizontal">
                        <VerticalStackLayout>
                            <Grid Padding="6" ColumnDefinitions="50,*,*,*,Auto" BackgroundColor="Transparent" WidthRequest="900">
                                <Label Text="ID" FontAttributes="Bold" FontSize="12"/>
                                <Label Text="Date" FontAttributes="Bold" FontSize="12" Grid.Column="1"/>
                                <Label Text="Owner" FontAttributes="Bold" FontSize="12" Grid.Column="2"/>
                                <Label Text="Space" FontAttributes="Bold" FontSize="12" Grid.Column="3"/>
                                <Label Text="Amount" FontAttributes="Bold" FontSize="12" Grid.Column="4" HorizontalTextAlignment="End"/>
                            </Grid>

                            <CollectionView ItemsSource="{Binding Transactions}" HeightRequest="210" SelectionMode="None" >
                                <CollectionView.EmptyView>
                                    <VerticalStackLayout Padding="6">
                                        <Label Text="No transactions yet." TextColor="#9E9E9E" />
                                    </VerticalStackLayout>
                                </CollectionView.EmptyView>

                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="6" ColumnDefinitions="50,*,*,*,Auto" WidthRequest="900">
                                            <Label Text="{Binding ID}" FontSize="13"/>
                                            <Label Text="{Binding Date}" Grid.Column="1" FontSize="13"/>
                                            <Label Text="{Binding Owner}" Grid.Column="2" FontSize="13"/>
                                            <Label Text="{Binding Space}" Grid.Column="3" FontSize="13"/>
                                            <Label Text="{Binding Amount}" Grid.Column="4" FontSize="13" HorizontalTextAlignment="End"/>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </ScrollView>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
