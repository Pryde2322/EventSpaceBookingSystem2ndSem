<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EventSpaceBookingSystem.Model"
             x:Class="EventSpaceBookingSystem.View.AdminPage"
             Title=" "
             BackgroundColor="LightGrey"
             xmlns:converters="clr-namespace:EventSpaceBookingSystem.Converters">

    <ScrollView>
        <VerticalStackLayout Padding="18" Spacing="14">

            <!-- Header -->
            <Grid Margin="0,20,0,30">
                <Label Text="Admin" FontSize="30" FontAttributes="Bold" HorizontalOptions="Start" />
                <HorizontalStackLayout Spacing="15"
                       HorizontalOptions="End"
                       VerticalOptions="Center">

                    <ImageButton Source="user24px.png"
                     Clicked="OnProfileIconClicked"
                     BackgroundColor="Transparent"/>
                </HorizontalStackLayout>
            </Grid>

            <!-- Search Box -->
            <Frame Padding="8" HasShadow="False" BackgroundColor="White" CornerRadius="12" Margin="0,0,0,10">
                <SearchBar
                    Placeholder="Search Space Owners"
                    FontSize="15"
                    BackgroundColor="Transparent"
                    TextColor="Black"
                    PlaceholderColor="#9E9E9E"
                    SearchCommand="{Binding SearchCommand}"
                    Text="{Binding SearchText, Mode=TwoWay}"
                    HorizontalOptions="FillAndExpand" />
            </Frame>

            <!-- Filter Buttons -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="FillAndExpand" Margin="0,0,0,10">
                <Button Text="All Owners" FontAttributes="Bold" Clicked="OnAllOwnersClicked"/>
                <Button Text="Active" FontAttributes="Bold" Clicked="OnActiveOwnersClicked"/>
                <Button Text="Deactivated" FontAttributes="Bold" Clicked="OnDeactivatedOwnersClicked"/>
            </HorizontalStackLayout>

            <!-- Owner List â€” vertical card style (replace the previous Owner List Frame) -->
            <Frame HasShadow="False"
       BackgroundColor="White"
       CornerRadius="12"
       Padding="10">

                <CollectionView ItemsSource="{Binding Owners}"
                    x:Name="OwnersListView"
                    SelectionMode="None"
                    ItemsLayout="VerticalList">
                    <CollectionView.Header>
                        <Label Text="Owners" FontSize="18" FontAttributes="Bold" Padding="6"/>
                    </CollectionView.Header>

                    <CollectionView.EmptyView>
                        <Label Text="No owners found." Padding="8" TextColor="#9E9E9E" />
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="6" CornerRadius="8" Padding="10" BackgroundColor="#FAFAFA" HasShadow="True">
                                <!-- Use Grid so the Switch stays fixed at the right (Auto column) while text uses the remaining space -->
                                <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto,Auto" ColumnSpacing="10">
                                    <!-- Left column: name, spaces, status and last active -->
                                    <VerticalStackLayout Grid.Column="0" Spacing="6">
                                        <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" LineBreakMode="TailTruncation" />

                                        <HorizontalStackLayout Spacing="8">
                                            <Label Text="{Binding Spaces, StringFormat='{}{0} spaces'}" FontSize="14" TextColor="#666" />
                                        </HorizontalStackLayout>

                                        <HorizontalStackLayout Spacing="8">
                                            <Label Text="Status:" FontSize="12" TextColor="#757575" VerticalOptions="Center" />
                                            <Label Text="{Binding IsActive, Converter={StaticResource StatusConverter}}"
                                       FontSize="12"
                                       TextColor="{Binding IsActive, Converter={StaticResource StatusColorConverter}}"
                                       VerticalOptions="Center" />
                                            <Label Text="Last Active:" FontSize="12" TextColor="#757575" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                                            <Label Text="{Binding LastActive}" FontSize="12" VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>

                                    <!-- Right column: fixed Switch -->
                                    <Switch Grid.Column="1" IsToggled="{Binding IsActive, Mode=TwoWay}" VerticalOptions="Center" HorizontalOptions="End" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Frame>

            <!-- Transaction Reports -->
            <Frame BorderColor="#E0E0E0"
                   CornerRadius="10"
                   Padding="14"
                   BackgroundColor="White"
                   HasShadow="False">

                <VerticalStackLayout Spacing="12">
                    <Label Text="Transaction Reports"
                           Margin="0,0,0,10"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#000000" />

                    <!-- Filters (responsive, wraps on small screens) -->
                    <FlexLayout Direction="Row" Wrap="Wrap" JustifyContent="Start" AlignItems="Start" Margin="0,10,0,20" >

                        <!-- Date Range -->
                        <VerticalStackLayout Spacing="4" WidthRequest="260" Margin="0,0,12,12">
                            <Label Text="Date Range" FontAttributes="Bold" FontSize="13" TextColor="#000000" />
                            <Label Text="Filter transactions by date" FontSize="12" TextColor="#757575" />
                            <Button Text="Select Dates" BackgroundColor="#000000" TextColor="White" CornerRadius="8"
                                        HeightRequest="40" Command="{Binding SelectDateRangeCommand}" />
                        </VerticalStackLayout>

                        <!-- Location -->
                        <VerticalStackLayout Spacing="4" WidthRequest="260" Margin="0,0,12,12">
                            <Label Text="Location" FontAttributes="Bold" FontSize="13" TextColor="#000000" />
                            <Label Text="Filter transactions by venue location" FontSize="12" TextColor="#757575" />
                            <Button Text="Select Space" BackgroundColor="#000000" TextColor="White" CornerRadius="8"
                                        HeightRequest="40" Command="{Binding SelectLocationCommand}" />
                        </VerticalStackLayout>

                        <!-- Owner -->
                        <VerticalStackLayout Spacing="4" WidthRequest="260" Margin="0,0,12,12">
                            <Label Text="Owner" FontAttributes="Bold" FontSize="13" TextColor="#000000" />
                            <Label Text="Filter transactions by space owner" FontSize="12" TextColor="#757575" />
                            <Button Text="Select Owner" BackgroundColor="#000000" TextColor="White" CornerRadius="8"
                                        HeightRequest="40" Command="{Binding SelectOwnerCommand}" />
                        </VerticalStackLayout>

                        <!-- Clear Filters -->
                        <VerticalStackLayout Spacing="4" WidthRequest="260" Margin="0,0,12,12">
                            <Label Text="" FontSize="13" />
                            <Label Text="" FontSize="12" />
                            <Button Text="Clear Filters" BackgroundColor="#9E9E9E" TextColor="White" CornerRadius="8"
                                        HeightRequest="40" Command="{Binding ClearFiltersCommand}" />
                        </VerticalStackLayout>

                    </FlexLayout>

                    <!-- Transactions Table (mobile-friendly card layout) -->
                    <VerticalStackLayout>
                        <!-- Optional small header row for readability -->
                        <Grid Padding="6" ColumnDefinitions="Auto,*" BackgroundColor="Transparent">
                            <Label Text="Transactions" FontAttributes="Bold" FontSize="14" />
                        </Grid>

                        <CollectionView ItemsSource="{Binding Transactions}" SelectionMode="None" ItemsLayout="VerticalList">
                            <CollectionView.EmptyView>
                                <VerticalStackLayout Padding="6">
                                    <Label Text="No transactions yet." TextColor="#9E9E9E" />
                                </VerticalStackLayout>
                            </CollectionView.EmptyView>

                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame Margin="6,6,6,0" Padding="14" CornerRadius="10" BackgroundColor="#FFFFFF" HasShadow="True" BorderColor="#EEEEEE">
                                        <VerticalStackLayout Spacing="10">

                                            <!-- Top row: labeled ID + Date (left), Amount (right) -->
                                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                                                <VerticalStackLayout Grid.Column="0" Spacing="4">
                                                    <HorizontalStackLayout Spacing="6">
                                                        <Label Text="ID:" FontSize="11" TextColor="#757575" VerticalOptions="Center" />
                                                        <Label Text="{Binding ID}" FontSize="14" FontAttributes="Bold" LineBreakMode="TailTruncation" VerticalOptions="Center" />
                                                    </HorizontalStackLayout>

                                                    <Label Text="{Binding Date}" FontSize="12" TextColor="#757575" />
                                                </VerticalStackLayout>

                                                <Label Grid.Column="1" Text="{Binding Amount}" FontSize="14" FontAttributes="Bold" HorizontalOptions="End" VerticalOptions="Center" />
                                            </Grid>

                                            <BoxView HeightRequest="1" Color="#F0F0F0" />

                                            <!-- Bottom row: Owner and Space in two columns -->
                                            <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Padding="0,6,0,0">
                                                <!-- Use stacked layout for Owner and Space so long text wraps without overlapping -->
                                                <VerticalStackLayout Spacing="6" Padding="0,6,0,0">
                                                    <Label Text="Owner" FontSize="11" TextColor="#757575" />
                                                    <Label Text="{Binding Owner}" FontSize="13" LineBreakMode="TailTruncation" MaxLines="2" />

                                                    <BoxView HeightRequest="6" Color="Transparent" />

                                                    <Label Text="Space" FontSize="11" TextColor="#757575" />
                                                    <Label Text="{Binding Space}" FontSize="13" LineBreakMode="TailTruncation" MaxLines="2" />
                                                </VerticalStackLayout>
                                            </Grid>

                                        </VerticalStackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
