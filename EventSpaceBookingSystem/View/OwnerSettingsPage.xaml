<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventSpaceBookingSystem.View.OwnerSettingsPage"
             xmlns:controls="clr-namespace:EventSpaceBookingSystem.Controls"
             BackgroundColor="#E7E7E7">


    <Grid ColumnDefinitions="50,*">
        <controls:OwnerPageSidebarView Grid.Column="0" SelectedPage="Settings"/>
        <StackLayout Orientation="Vertical" Grid.Column="1">
            <Grid ColumnDefinitions="*,*">
                <HorizontalStackLayout Grid.Column="0" 
                   Padding="15,10,0,0">
                    <Label Text="RAMENCO"
                           FontAttributes="Bold"
                           FontSize="Medium"
                           TextColor="Black"/>
                    <Label Text="  Space Booking"
                           FontSize="Medium"
                           TextColor="Black"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Grid.Column="1"  
                   Padding="0,5,25,0"
                   HorizontalOptions="End">
                    <ImageButton Source="bell.png" 
                     Clicked="OnNotificationIconClicked"/>
                    <ImageButton Source="user24px.png"
                     Clicked="OnProfileIconClicked"/>
                </HorizontalStackLayout>
            </Grid>
            <Line X2="1920" Stroke="Black"/>

            <Label Text="Settings"
                   Padding="40"
                   TextColor="Black"
                   FontSize="Medium"/>
            <Border WidthRequest="1300" HeightRequest="500" 
                    HorizontalOptions="Center" 
                    StrokeShape="RoundRectangle 20" 
                    Stroke="#D9D9D9"
                    BackgroundColor="#D9D9D9">
                
            </Border>
        </StackLayout>
    </Grid>
</ContentPage>