<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="EventSpaceBookingSystem.View.RatePopup">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Rate the Service" FontAttributes="Bold" FontSize="18"/>
        <Label Text="Select your experience (1-5 stars):"/>

        <Picker x:Name="RatingPicker" Title="Select Rating">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:Int32}">
                    <x:Int32>1</x:Int32>
                    <x:Int32>2</x:Int32>
                    <x:Int32>3</x:Int32>
                    <x:Int32>4</x:Int32>
                    <x:Int32>5</x:Int32>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Button Text="OK" Clicked="OnOkClicked"/>
            <Button Text="Cancel" Clicked="OnCancelClicked"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>
